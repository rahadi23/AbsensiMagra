<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang,"/>
        <TextView
            android:textAlignment="center"
            android:textSize="20dip"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama_panitia"
            android:text="Nama"/>
        <TextView
            android:textAlignment="center"
            android:textSize="15dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nim_panitia"
            android:text="NIM"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin">
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/relativeLayout">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageButtonDaftarMaba"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/maba"/>
                <!--<ImageButton-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="150dp"-->
                    <!--android:src="@drawable/maba"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:id="@+id/imageButtonDaftarMaba" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:text="Download Daftar Maba"
                android:layout_below="@id/imageButtonDaftarMaba"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/relativeLayout3">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageButtonScannerAbsensi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/scan"/>
                <!--<ImageButton-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="150dp"-->
                    <!--android:src="@drawable/scan"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:id="@+id/imageButtonScannerAbsensi" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:text="Scanner Absensi"
                android:layout_below="@id/imageButtonScannerAbsensi"
                android:layout_centerHorizontal="true" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2">
                <!--<ImageButton-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="150dp"-->
                    <!--android:src="@drawable/tugas_maba"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:background="@null"-->
                    <!--android:id="@+id/imageButtonAbsensiMaba" />-->
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageButtonAbsensiMaba"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/tugas_maba"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:text="Absensi Maba"
                android:layout_below="@+id/imageButtonAbsensiMaba"
                android:layout_centerHorizontal="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout4">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageButtonUpload"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/upload_activ"/>
                <!--<ImageButton-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="150dp"-->
                    <!--android:src="@drawable/upload_activ"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:id="@+id
                    /imageButtonUpload" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:text="Upload Absensi"
                android:layout_below="@+id/imageButtonUpload"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </ScrollView>

</LinearLayout>